# WebSocket Broadcaster Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
SERVER_ADDR=:8080

# Redis Configuration
REDIS_URL=localhost:6380
REDIS_PASSWORD=reddis_pw

# Sports Configuration
# Comma-separated list of sports to consume odds from
# Each sport will create a stream subscription: odds.normalized.{sport_key}
# Examples:
#   - Single sport:   SPORTS=basketball_nba
#   - Multiple sports: SPORTS=basketball_nba,americanfootball_nfl,baseball_mlb
SPORTS=basketball_nba

# Stream Consumer Configuration
CONSUMER_GROUP=ws-broadcaster
CONSUMER_ID=broadcaster-1
